{% extends 'base.html.twig' %}

{% block title %}
    Liste des composants
{% endblock %}

{% block body %}
    <a href="{{ path('component_new') }}">Créer un nouveau composant</a>
    <table>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Marque</th>
            <th>Type</th>
            <th>Prix</th>
            <th>Créé le</th>
            <th>Mise à jour le</th>
            <th>Ordinateurs associés</th>
            <th>Actions</th>
        </tr>
        {% for component in components %}
            <tr>
                <td>{{ component.id }}</td>
                <td>{{ component.name }}</td>
                <td>{{ component.brand }}</td>
                <td>{{ component.type }}</td>
                <td>{{ component.price|number_format(2, ',', ' ') }}</td>
                <td>{{ component.createdAt|date('d/m/Y h:i:s') }}</td>
                <td>{{ component.UpdatedAt|date('d/m/Y h:i:s') }}</td>
                <td>
                    {% for computer in component.computers %}
                        {{ computer.name }} <br />
                    {% endfor %}
                </td>
                <td></td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('component_new') }}">Créer un nouveau composant</a>
{% endblock %}
